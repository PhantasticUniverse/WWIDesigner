{
  "name": "wwi-designer-web",
  "version": "0.1.0",
  "description": "Woodwind Instrument Designer - Web Edition",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/web/server.ts",
    "start": "bun run src/web/server.ts",
    "build": "bun build src/index.ts --outdir ./dist --target browser",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:debug": "bunx playwright test --debug",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/PhantasticUniverse/WWIDesigner"
  },
  "keywords": [
    "woodwind",
    "instrument",
    "design",
    "acoustic",
    "flute",
    "recorder",
    "optimization"
  ],
  "author": "WWIDesigner Contributors"
}
